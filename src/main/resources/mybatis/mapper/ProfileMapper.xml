<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bium.chaeum.infrastructure.mybatis.mapper.ProfileMapper">

    <resultMap id="ProfileMap" type="ProfileRecord">
        <id property="userId" column="USER_ID" />
        <result property="birthDate" column="BIRTH_DATE" />
        <result property="gender" column="GENDER" />
        <result property="height" column="HEIGHT" />
        <result property="weight" column="WEIGHT" />
        <result property="preferredDiet" column="PREFERRED_DIET" />
        <result property="bmr" column="BMR" />
    </resultMap>

    <select id="selectById" parameterType="string" resultMap="ProfileMap">
        SELECT USER_ID, BIRTH_DATE, GENDER, HEIGHT, WEIGHT, PREFERRED_DIET, BMR
        FROM PROFILE
        WHERE USER_ID = #{userId}
    </select>

    <insert id="insert" parameterType="ProfileRecord">
        INSERT INTO PROFILE (
            USER_ID,
            BIRTH_DATE,
            GENDER,
            HEIGHT,
            WEIGHT,
            PREFERRED_DIET,
            BMR
        )
        VALUES (
            #{userId},
            #{birthDate},
            #{gender},
            #{height},
            #{weight},
            #{preferredDiet},
            #{bmr}
        )
    </insert>

    <update id="update" parameterType="ProfileRecord">
        UPDATE PROFILE SET
            HEIGHT = #{height},
            WEIGHT = #{weight},
            PREFERRED_DIET = #{preferredDiet},
            BMR = #{bmr}
        WHERE
            USER_ID = #{userId}
    </update>
</mapper>